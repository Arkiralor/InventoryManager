# Example Environment Configuration
# Copy this file to .env and update the values accordingly
#
# Generated from .env - DO NOT commit your actual .env file!

## General Settings:
# Name of the application
APP_NAME = "YourAppName"
# The main domain URL for the application
DOMAIN_URL = "https://www.example.com"
# Email address of the application owner
OWNER_EMAIL = "owner@example.com"
# Contact email for the application
CONTACT_EMAIL = "contact@example.com"
## System Settings:
# Django secret key - generate a new one for production
SECRET_KEY = "your-secret-key-here-generate-using-django"
# Enable/disable debug mode (True/False)
DEBUG = True
# Environment type (DEV, STAGING, PROD)
ENV_TYPE = "DEV"
# Comma-separated list of allowed hosts
ALLOWED_HOSTS = "localhost, 127.0.0.1"
# Algorithm used for JWT encoding
JWT_ALGORITHM = "HS256"
# Comma-separated list of allowed CORS origins
CORS_ORIGIN_WHITELIST = "localhost:8000, 127.0.0.1:8000"
# Maximum upload size in bytes (default: 25MB)
DATA_UPLOAD_MAX_MEMORY_SIZE = 26214400
# Maximum number of form fields
DATA_UPLOAD_MAX_NUMBER_FIELDS = 10000
## Database Settings:
# PostgreSQL database name
DB_NAME = "your_database_name"
# PostgreSQL database host
DB_HOST = "localhost"
# PostgreSQL database port
DB_PORT = "5432"
# PostgreSQL database username
DB_USER = "your_db_user"
# PostgreSQL database password
DB_PASSWORD = "your_db_password"
## MongoDB Settings:
# MongoDB connection URI
MONGO_URI = "mongodb://localhost:27017"
# MongoDB database name
MONGO_NAME = "your_mongo_db"
# MongoDB host
MONGO_HOST = "localhost"
# MongoDB port
MONGO_PORT = "27017"
# MongoDB username
MONGO_USER = "your_mongo_user"
# MongoDB password
MONGO_PASSWORD = "your_mongo_password"
## Internationalization Settings:
# Default language code
LANGUAGE_CODE = "en-us"
# Application timezone
TIME_ZONE = "UTC"
# Enable internationalization
USE_I18N = True
# Enable timezone support
USE_TZ = True
## Authentication Settings:
# Maximum OTP verification attempts
OTP_ATTEMPT_LIMIT = 5
# OTP attempt timeout in minutes
OTP_ATTEMPT_TIMEOUT = 30
## Amazon Web Services Settings:
# Enable AWS S3 storage (True/False)
USE_AWS_S3 = False
# AWS SNS sender ID for SMS
SNS_SENDER_ID = "YourSenderID"
# AWS access key ID
AWS_ACCESS_KEY_ID = "your-aws-access-key-id"
# AWS secret access key
AWS_SECRET_ACCESS_KEY = "your-aws-secret-access-key"
# AWS region name
AWS_REGION_NAME = "us-east-1"
# AWS S3 bucket name
AWS_STORAGE_BUCKET_NAME = "your-s3-bucket-name"
# AWS S3 bucket ARN
AWS_S3_ARN = "arn:aws:s3:::your-bucket-name"
## Redis Settings:
# Redis server host
REDIS_HOST = "127.0.0.1"
# Redis server port
REDIS_PORT = "6379"
# Redis database number
REDIS_DB = "0"
# Redis password (leave empty if none)
REDIS_PASSWORD = ""
## Cron Settings:
# Enable cron jobs (True/False)
CRON_ENABLED = True
##EmailSettings:
# SMTP server hostname
EMAIL_HOST = "smtp.gmail.com"
# Use TLS for email (True/False)
EMAIL_USE_TLS = "True"
# Use SSL for email (True/False)
EMAIL_USE_SSL = "False"
# SMTP server port
EMAIL_PORT = 587
# SMTP username/email
EMAIL_HOST_USER = "your-email@gmail.com"
# SMTP password or app password
EMAIL_HOST_PASSWORD = "your-email-app-password"
# Manager notification email
MANAGER_EMAIL = "manager@example.com"
